<!DOCTYPE html>
<html>
  <head>
    <title>Pekabgt</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <div class="bg-white rounded-md border">
      <div class="grid grid-cols-12 gap-0 h-screen">
        <div class="col-span-2 bg-white border-r">
          <div class="p-8">
            <%= render "shared/menu" %>
          </div>
        </div>
        <div class="col-span-10 bg-[#FAFAFA] overflow-y-auto">
          <div class="p-8">
            <%= render "shared/alert" %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>

    <script>
      window.parent.postMessage("resize::915px", "*");
    </script>
  </body>
</html>
